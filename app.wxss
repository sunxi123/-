/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.footer{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
}
.footer>view{
  width: 50%;
  float: left;
  background: #f3f3f3;
  border-top: 1px solid #999;
  box-sizing: border-box;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
}
.footer>view:last-child{
  border-left: 1px solid #999;
}
text,view{
  color: #333;
}